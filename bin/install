#!/usr/bin/env bash

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir

  if [[ $version == "legacy" ]]; then
    ssl_ver='1.1.1w'
    pcre_ver='8.45'
    pcre_url="https://downloads.sourceforge.net/project/pcre/pcre/${pcre_ver}/pcre-${pcre_ver}.tar.gz"
    pcre_build_args='--disable-cpp --enable-utf --enable-unicode-properties --enable-jit'
  else
    ssl_ver='3.4.3'
    pcre_ver='10.44'
    pcre_url="https://github.com/PCRE2Project/pcre2/releases/download/pcre2-${pcre_ver}/pcre2-${pcre_ver}.tar.gz"
    pcre_build_args='--enable-jit --enable-unicode'
  fi

  # openssl
  curl -fSL -O "https://www.openssl.org/source/openssl-${ssl_ver}.tar.gz"
  tar -xf openssl*.gz
  rm -rf openssl*.gz
  cd openssl*
  ./config --prefix=$install_dir/openssl
  make && make -s install || exit 1
  curl -fSL -o $install_dir/openssl/ssl/cert.pem http://curl.haxx.se/ca/cacert.pem || exit 1

  # pcre
  curl -fSL -O $pcre_url
  tar -xf pcre*.gz
  rm -rf pcre*.gz
  cd pcre*
  ./configure --prefix=$install_dir/pcre $pcre_build_args
  make && make -s install || exit 1

  cd $build_dir

  # openresty
  curl -fSL -O "https://openresty.org/download/openresty-${version}.tar.gz"
  tar -xf openresty*.gz
  rm -rf openresty*.gz
  cd openresty*
  # sed -ie 's/DEFAULT_ENCODE_EMPTY_TABLE_AS_OBJECT 1/DEFAULT_ENCODE_EMPTY_TABLE_AS_OBJECT 0/g' bundle/lua-cjson-*/lua_cjson.c
  ./configure --prefix=$install_dir --with-pcre --with-pcre-jit --with-http_ssl_module \
    --with-cc-opt="-I$install_dir/openssl/include -I$install_dir/pcre/include" --with-ld-opt="-L$install_dir/openssl/lib -L$install_dir/pcre/lib" $CONFIGURE_OPTIONS
  make && make -s install || exit 1

  export PATH=$PATH:$install_dir/luajit/bin

  cd $build_dir

  # luarocks
  curl -fSL -O https://luarocks.org/releases/luarocks-3.13.0.tar.gz
  tar -xf luarocks*.gz
  rm -rf luarocks*.gz
  cd luarocks*
  ./configure --prefix=$install_dir/luajit --with-lua=$install_dir/luajit
  # ./configure --prefix=$install_dir/luajit --with-lua-bin=$install_dir/luajit/bin --with-lua-include=$install_dir/luajit/include/luajit-2.1 --lua-suffix=jit
  make && make -s install || exit 1

  # cd $build_dir/openresty*/build/lua-cjson-*
  # luarocks make || exit 1
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
